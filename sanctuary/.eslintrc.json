{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es3.json"],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "FunctionDeclaration": {"parameters": "first"},
        "FunctionExpression": {"parameters": "first"},
        "CallExpression": {"arguments": "first"},
        "ArrayExpression": "first",
        "ObjectExpression": "first",
        "ignoredNodes": [
          "CallExpression",
          "CallExpression > *",
          "CallExpression > ArrowFunctionExpression ArrowFunctionExpression > *",
          "CallExpression > FunctionExpression > BlockStatement",
          "ConditionalExpression",
          "MemberExpression"
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.md"],
      "globals": {
        "$": false,
        "Cons": false,
        "Descending": false,
        "Just": false,
        "Left": false,
        "Nil": false,
        "Nothing": false,
        "Pair": false,
        "R": false,
        "Right": false,
        "S": false,
        "Sum": false,
        "localStorage": false,
        "sanctuary": false,
        "window": false
      },
      "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "func-style": ["error", "declaration", {"allowArrowFunctions": true}],
        "indent": ["off"],
        "no-eval": ["off"],
        "no-extra-semi": ["off"],
        "no-unused-vars": ["error", {"args": "none", "varsIgnorePattern": "^([$]|S)$"}]
      }
    },
    {
      "files": ["index.js"],
      "globals": {"process": false},
      "rules": {
        "max-len": ["error", {"code": 79, "ignoreUrls": true, "ignorePattern": "^ *//(# |  .* :: |[.] > |[.] // |[.] \\[.*\\]: )"}],
        "multiline-comment-style": ["off"]
      }
    }
  ]
}
